<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discussion database name:" />

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Acme corp internal discussion" >

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Host name:" />

        <EditText
            android:id="@+id/hostName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="www.acme.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Path to database:" />

        <EditText
            android:id="@+id/dbPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="/directory/disc.nsf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username for login" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="John Doe/Acme corp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1234"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/useSSL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use SSL" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTTP Port:" />

        <EditText
            android:id="@+id/httpPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="80" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced - use only if you have to" />

        <CheckBox
            android:id="@+id/disableComputeWithForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable Compute with form" />
    </LinearLayout>

</ScrollView>